<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313849" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@drawable/top_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp" >

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/manage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用程序"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

    <GridView
        android:id="@+id/gvApps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="58dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="28dp"
        android:horizontalSpacing="10dp"
        android:listSelector="@drawable/choose_gridview"
        android:numColumns="3"
        android:verticalSpacing="10dp" >
    </GridView>

    <ListView
        android:id="@+id/lvApps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="58dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="28dp"
        android:listSelector="@drawable/choose_listview"
        android:visibility="gone" >
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bg" >

        <ImageButton
            android:id="@+id/ibChangeView"
            android:layout_width="76dp"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/list" />

        <ImageButton
            android:id="@+id/ibChangeCategory"
            android:layout_width="76dp"
            android:layout_height="54dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/all" />
    </RelativeLayout>

</RelativeLayout>